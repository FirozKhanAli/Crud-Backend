{{>header}}
<title>CRUD3 | Add</title>
{{>navbar}}
<div class="container mt-1">
    <div class="w-80 m-auto">
    <h5 class="background text-light text-center p-2">Create Employee Record</h5>
        {{#if show}}
        <div class="alert alert-warning alert-danger text-center fade show" role="alert">
            {{error}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            {{/if}}
        </div>
        <form action="/add/" method="post">
           <div class="row mb-2">
             <div class="col-12">
                <input type="text" name="name" placeholder="Enter Full Name" class="form-control" value="{{data.name}}">
            </div>
           </div>
            <div class="row mb-2">
                <div class="col-md-6">
                    <input type="email" name="email" placeholder="Enter Email Address" class="form-control" value="{{data.email}}">
                </div>
                <div class="col-md-6 ">
                    <input type="text" name="phone" placeholder="Enter Phone Number" class="form-control" value="{{data.phone}}">
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-6 ">
                    <input type="text" name="dsg" placeholder="Enter Designation" class="form-control" value="{{data.dsg}}">
                </div>
                <div class="col-md-6 ">
                    <input type="text" name="salary" placeholder="Enter Salary" class="form-control" value="{{data.salary}}">
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-6 ">
                    <input type="text" name="city" placeholder="Enter City Name" class="form-control" value="{{data.city}}">
                </div>
                <div class="col-md-6 ">
                    <input type="text" name="state" placeholder="Enter State Name" class="form-control" value="{{data.state}}">
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-6">
                    <button type="reset" class="btn btn-sm btn-danger text-light w-100">Reset </button>
                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-sm btn-success text-light w-100">Submit </button>
                </div>
            </div>

        </form>
    </div>
</div>
{{>footer}}